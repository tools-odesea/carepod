{% comment %}
  Why Carepod — 4 numbered feature blocks (matches original site layout)
{% endcomment %}

<section class="carepod-why" style="padding: 5rem 2rem; background: {{ section.settings.bg_color }};">
  <div style="max-width: 1100px; margin: 0 auto;">
    {% for block in section.blocks %}
      <div style="display: grid; grid-template-columns: {% cycle '1fr 1fr', '1fr 1fr' %}; gap: 3rem; align-items: center; margin-bottom: 4rem; {% cycle '', 'direction: rtl;' %}">
        {% if block.settings.image != blank %}
          <div style="{% cycle '', 'direction: ltr;' %}">
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.title }}"
              loading="lazy"
              style="width: 100%; border-radius: 8px;"
            >
          </div>
        {% endif %}

        <div style="{% cycle '', 'direction: ltr;' %} padding: 1rem;">
          <span style="font-size: 3rem; font-weight: 200; color: {{ section.settings.number_color }}; opacity: 0.3; display: block; margin-bottom: 0.5rem;">
            {{ block.settings.number }}
          </span>
          <h3 style="font-size: 1.6rem; font-weight: 400; color: {{ section.settings.heading_color }}; margin-bottom: 0.5rem; line-height: 1.3;">
            {{ block.settings.title }}
          </h3>
          <p style="font-size: 1rem; color: {{ section.settings.text_color }}; line-height: 1.7; margin-bottom: 1.5rem;">
            {{ block.settings.description }}
          </p>

          {% if block.settings.bullet_1 != blank %}
            <ul style="list-style: none; padding: 0; margin: 0;">
              {% assign bullets = "bullet_1,bullet_2,bullet_3" | split: "," %}
              {% for b in bullets %}
                {% assign val = block.settings[b] %}
                {% if val != blank %}
                  <li style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem; font-size: 0.9rem; color: {{ section.settings.text_color }};">
                    <span style="color: {{ section.settings.accent_color }};">✓</span> {{ val }}
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

