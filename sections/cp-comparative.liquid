{%- assign feature_blocks = section.blocks | where: 'type', 'feature_row' -%}

<style>
  .cp-comparative {
    background: {{ section.settings.bg_color }};
    padding: 5rem 2rem;
  }

  .cp-comparative__inner {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }

  .cp-comparative__heading {
    font-size: 35px;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-weight: 700;
    color: #1c1d1d;
    margin: 0;
    line-height: 1.35em;
    letter-spacing: 0.4px;
  }

  .cp-comparative__subtext {
    font-family: var(--font-body-family);
    font-size: 16px;
    font-weight: 400;
    line-height: 25.6px;
    letter-spacing: 0.4px;
    color: #1c1d1d;
    max-width: 580px;
    margin: 0 0 1.5rem;
  }

  /* Transposed table: features as columns, brands as rows */
  .cp-comparative__table {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .cp-comparative__grid {
    display: grid;
    grid-template-columns: minmax(190px, 1.6fr) repeat({{ feature_blocks.size }}, 1fr);
    width: 100%;
    min-width: 700px;
  }

  /* Header row: feature names */
  .cp-comparative__header-spacer {
    /* empty first cell */
  }

  .cp-comparative__feature-header {
    font-family: var(--font-body-family);
    font-size: 14px;
    font-weight: 600;
    line-height: 1.35em;
    letter-spacing: 0.3px;
    color: #1c1d1d;
    text-align: center;
    padding: 1rem 0.5rem 1.25rem;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  /* Brand cells (first column in each row) */
  .cp-comparative__brand-cell {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem 1.5rem 0;
    border-top: 1px solid #e8e8e8;
  }

  .cp-comparative__brand-name {
    font-family: var(--font-body-family);
    font-size: 14px;
    font-weight: 700;
    line-height: 1.4em;
    letter-spacing: 0.4px;
    color: #2253f5;
    margin: 0;
    white-space: nowrap;
  }

  .cp-comparative__brand-name--other {
    color: #1c1d1d;
  }

  .cp-comparative__brand-img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    flex-shrink: 0;
  }

  /* Check / cross cells */
  .cp-comparative__cell {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 0.5rem;
    border-top: 1px solid #e8e8e8;
  }

  /* Footer */
  .cp-comparative__footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2.5rem;
  }

  .cp-comparative__note {
    font-family: var(--font-heading-family);
    font-size: 14px;
    font-weight: 400;
    font-style: italic;
    line-height: 100%;
    letter-spacing: 0.4px;
    color: #46474c;
    margin: 0;
  }

  .cp-comparative__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #000000;
    color: #ffffff;
    text-decoration: none;
    padding: 0.9rem 2.5rem;
    border-radius: 8px;
    font-family: var(--font-heading-family);
    font-size: 16px;
    font-weight: 700;
    line-height: 25.6px;
    letter-spacing: 0.4px;
    transition: background 0.2s ease;
  }

  .cp-comparative__button:hover {
    background: #333;
  }

  .cp-comparative__guarantee {
    font-family: var(--font-body-family);
    font-size: 13px;
    font-weight: 400;
    color: #46474c;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  @media screen and (max-width: 749px) {
    .cp-comparative {
      padding: 3.5rem 1rem;
    }

    .cp-comparative__heading {
      font-size: 23px;
      line-height: 34.5px;
    }

    .cp-comparative__subtext {
      font-size: 14px;
      line-height: 24px;
    }

    .cp-comparative__feature-header {
      font-size: 12px;
    }

    .cp-comparative__brand-img {
      width: 60px;
      height: 60px;
    }

    .cp-comparative__brand-name {
      font-size: 12px;
    }

    .cp-comparative__note {
      font-size: 11px;
    }

    .cp-comparative__button {
      font-size: 14px;
      line-height: 22.4px;
    }
  }
</style>

<div class="cp-comparative">
  <div class="cp-comparative__inner">

    <h2 class="cp-comparative__heading">{{ section.settings.heading | escape }}</h2>
    {%- if section.settings.subtext != blank -%}
      <p class="cp-comparative__subtext">{{ section.settings.subtext | escape }}</p>
    {%- endif -%}

    <div class="cp-comparative__table">
      <div class="cp-comparative__grid">

        <!-- Header row: spacer + feature names -->
        <div class="cp-comparative__header-spacer"></div>
        {%- for block in feature_blocks -%}
          <div class="cp-comparative__feature-header" {{ block.shopify_attributes }}>
            {{ block.settings.feature | escape }}
          </div>
        {%- endfor -%}

        <!-- Carepod row -->
        <div class="cp-comparative__brand-cell">
          <p class="cp-comparative__brand-name">Carepod<br>Humidifiers</p>
          {%- if section.settings.carepod_image != blank -%}
            {{
              section.settings.carepod_image
              | image_url: width: 200
              | image_tag:
                class: 'cp-comparative__brand-img',
                widths: '80, 160',
                sizes: '80px',
                loading: 'lazy',
                alt: 'Carepod'
            }}
          {%- endif -%}
        </div>
        {%- for block in feature_blocks -%}
          <div class="cp-comparative__cell">
            {%- if block.settings.carepod_has == true -%}
              <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="14" cy="14" r="14" fill="#1a6cde" fill-opacity="0.12"/>
                <path d="M8 14.5L12 18.5L20 10.5" stroke="#1a6cde" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- else -%}
              <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="14" cy="14" r="14" fill="#f0f0f0"/>
                <path d="M9.5 18.5L18.5 9.5M9.5 9.5L18.5 18.5" stroke="#bbb" stroke-width="2" stroke-linecap="round"/>
              </svg>
            {%- endif -%}
          </div>
        {%- endfor -%}

        <!-- Other Humidifiers row -->
        <div class="cp-comparative__brand-cell">
          <p class="cp-comparative__brand-name cp-comparative__brand-name--other">{{ section.settings.other_label | escape }}</p>
          {%- if section.settings.other_image != blank -%}
            {{
              section.settings.other_image
              | image_url: width: 200
              | image_tag:
                class: 'cp-comparative__brand-img',
                widths: '80, 160',
                sizes: '80px',
                loading: 'lazy',
                alt: 'Other humidifiers'
            }}
          {%- endif -%}
        </div>
        {%- for block in feature_blocks -%}
          <div class="cp-comparative__cell">
            {%- if block.settings.other_has == true -%}
              <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="14" cy="14" r="14" fill="#1a6cde" fill-opacity="0.12"/>
                <path d="M8 14.5L12 18.5L20 10.5" stroke="#1a6cde" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {%- else -%}
              <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <circle cx="14" cy="14" r="14" fill="#f0f0f0"/>
                <path d="M9.5 18.5L18.5 9.5M9.5 9.5L18.5 18.5" stroke="#bbb" stroke-width="2" stroke-linecap="round"/>
              </svg>
            {%- endif -%}
          </div>
        {%- endfor -%}

      </div>
    </div>

    <div class="cp-comparative__footer">
      {%- if section.settings.footnote != blank -%}
        <p class="cp-comparative__note">{{ section.settings.footnote | escape }}</p>
      {%- endif -%}
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link | default: '#' }}" class="cp-comparative__button">
          {{- section.settings.button_label | escape -}}
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M4 10H16M11 5L16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {%- endif -%}
      {%- if section.settings.guarantee_text != blank -%}
        <p class="cp-comparative__guarantee">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M8 1L2 4V7.5C2 11.09 4.56 14.41 8 15.25C11.44 14.41 14 11.09 14 7.5V4L8 1Z" stroke="#46474c" stroke-width="1.2"/>
            <path d="M5.5 8L7.5 10L10.5 6.5" stroke="#46474c" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {{ section.settings.guarantee_text | escape }}
        </p>
      {%- endif -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Comparative Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What sets Carepod apart?"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Loved by doctors, made for families. Carepod blends premium grade clean with sleek design, perfect for healthy breathing every day."
    },
    {
      "type": "header",
      "content": "Brand images"
    },
    {
      "type": "image_picker",
      "id": "carepod_image",
      "label": "Carepod product image"
    },
    {
      "type": "image_picker",
      "id": "other_image",
      "label": "Other humidifiers image"
    },
    {
      "type": "text",
      "id": "other_label",
      "label": "Competitor label",
      "default": "Other Humidifiers"
    },
    {
      "type": "header",
      "content": "Footer"
    },
    {
      "type": "text",
      "id": "footnote",
      "label": "Footnote",
      "default": "*Available for select models only"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Choose Your Carepod Bundle"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee text",
      "default": "Try it 100% risk free"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "feature_row",
      "name": "Feature column",
      "settings": [
        {
          "type": "text",
          "id": "feature",
          "label": "Feature name",
          "default": "Doctor Designed"
        },
        {
          "type": "checkbox",
          "id": "carepod_has",
          "label": "Carepod has this",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "other_has",
          "label": "Other humidifiers have this",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Comparative Section",
      "blocks": [
        { "type": "feature_row", "settings": { "feature": "No Monthly Subscriptions", "carepod_has": true, "other_has": false } },
        { "type": "feature_row", "settings": { "feature": "Doctor Designed", "carepod_has": true, "other_has": false } },
        { "type": "feature_row", "settings": { "feature": "Easy To Clean", "carepod_has": true, "other_has": false } },
        { "type": "feature_row", "settings": { "feature": "Premium Stainless Steel*", "carepod_has": true, "other_has": false } },
        { "type": "feature_row", "settings": { "feature": "No Filters Required", "carepod_has": true, "other_has": false } },
        { "type": "feature_row", "settings": { "feature": "Mold-Resistant", "carepod_has": true, "other_has": false } }
      ]
    }
  ]
}
{% endschema %}
