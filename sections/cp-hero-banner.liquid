<style>
  .cp-hero {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: flex-end;
    min-height: 90svh;
  }

  .cp-hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
  }

  /* Gradient overlay for text legibility */
  .cp-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.45) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0) 100%
    );
  }

  .cp-hero__content {
    position: relative;
    z-index: 2;
    max-width: var(--page-width, 1200px);
    width: 100%;
    margin: 0 auto;
    padding: 5rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.25rem;
  }

  .cp-hero__badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #ffffff;
    line-height: 1;
  }

  .cp-hero__stars {
    display: flex;
    gap: 1px;
    color: #ffffff;
    font-size: 0.9rem;
  }

  .cp-hero__heading {
    font-size: clamp(2rem, 4.5vw, 3.5rem);
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-weight: var(--font-heading-weight);
    line-height: 1.1;
    color: #ffffff;
    margin: 0;
    max-width: 560px;
  }

  .cp-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #1a1a1a;
    color: #ffffff;
    text-decoration: none;
    padding: 0.875rem 2.25rem;
    border-radius: 3px;
    font-size: 0.9375rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    transition: background 0.2s ease;
    margin-top: 0.25rem;
  }

  .cp-hero__button:hover {
    background: #333333;
  }

  /* Mobile */
  @media screen and (max-width: 749px) {
    .cp-hero {
      align-items: flex-start;
      min-height: 100svh;
    }

    .cp-hero::after {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.5) 0%,
        rgba(0, 0, 0, 0.25) 45%,
        rgba(0, 0, 0, 0) 100%
      );
    }

    .cp-hero__content {
      padding: 3rem 1.5rem;
      gap: 1rem;
    }

    .cp-hero__heading {
      font-size: clamp(1.75rem, 8vw, 2.25rem);
    }

    .cp-hero__bg--desktop { display: none; }
  }

  @media screen and (min-width: 750px) {
    .cp-hero__bg--mobile { display: none; }
  }
</style>

<div class="cp-hero">

  {%- comment -%} Background image — desktop {%- endcomment -%}
  {%- if section.settings.image_desktop != blank -%}
    {{
      section.settings.image_desktop
      | image_url: width: 3840
      | image_tag:
        class: 'cp-hero__bg cp-hero__bg--desktop',
        sizes: '100vw',
        widths: '750, 1100, 1500, 2000, 3000, 3840',
        fetchpriority: 'high',
        loading: 'eager',
        alt: section.settings.heading | strip_html | escape
    }}
  {%- endif -%}

  {%- comment -%} Background image — mobile (falls back to desktop) {%- endcomment -%}
  {%- assign mobile_img = section.settings.image_mobile | default: section.settings.image_desktop -%}
  {%- if mobile_img != blank -%}
    {{
      mobile_img
      | image_url: width: 1500
      | image_tag:
        class: 'cp-hero__bg cp-hero__bg--mobile',
        sizes: '100vw',
        widths: '375, 550, 750, 1100',
        fetchpriority: 'high',
        loading: 'eager',
        alt: section.settings.heading | strip_html | escape
    }}
  {%- endif -%}

  <div class="cp-hero__content">

    {%- if section.settings.badge_text != blank -%}
      <div class="cp-hero__badge">
        <span class="cp-hero__stars" aria-hidden="true">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
        <span>{{ section.settings.badge_text | escape }}</span>
      </div>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="cp-hero__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a
        href="{{ section.settings.button_link | default: '#' }}"
        class="cp-hero__button"
      >
        {{- section.settings.button_label | escape -}}
      </a>
    {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Optional. Falls back to desktop image if blank."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Social proof badge text",
      "default": "Over 130,220+ Humidifiers Sold"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "The ultimate upgrade for your home."
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Carepod"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
