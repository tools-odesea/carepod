<style>
  .cp-blog {
    padding: 60px 0;
    border-top: 1px solid #e8e8e1;
  }

  .cp-blog__inner {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .cp-blog__header {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 40px;
    position: relative;
  }

  .cp-blog__heading {
    font-family: var(--font-heading-family);
    font-weight: 700;
    font-size: 30px;
    line-height: 1.5;
    color: #1c1d1d;
    margin: 0;
    text-align: center;
  }

  .cp-blog__view-all {
    font-family: var(--font-body-family);
    font-size: 16px;
    font-weight: 400;
    color: #1c1d1d;
    text-decoration: none;
    position: absolute;
    right: 0;
  }

  .cp-blog__view-all:hover {
    text-decoration: underline;
  }

  .cp-blog__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .cp-blog__card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .cp-blog__card-image-wrap {
    position: relative;
    overflow: hidden;
    margin-bottom: 20px;
    aspect-ratio: 16 / 10;
    background: #f5f5f5;
  }

  .cp-blog__card-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 2s ease-out;
  }

  .cp-blog__card:hover .cp-blog__card-img {
    transform: scale(1.05);
  }

  .cp-blog__card-tag {
    font-family: var(--font-body-family);
    font-size: 13px;
    font-weight: 400;
    color: #1c1d1d;
    margin: 0 0 4px;
  }

  .cp-blog__card-title {
    font-family: var(--font-body-family);
    font-size: 21px;
    font-weight: 400;
    line-height: 1.4;
    color: #1c1d1d;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .cp-blog {
      padding: 40px 0;
    }

    .cp-blog__view-all {
      display: none;
    }

    .cp-blog__heading {
      font-size: 25px;
    }

    .cp-blog__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .cp-blog__card-tag {
      font-size: 11px;
    }

    .cp-blog__card-title {
      font-size: 18px;
    }
  }
</style>

<div class="cp-blog">
  <div class="cp-blog__inner">

    <div class="cp-blog__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="cp-blog__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}
      {%- if section.settings.blog != blank -%}
        <a href="{{ section.settings.blog.url }}" class="cp-blog__view-all">View all</a>
      {%- endif -%}
    </div>

    <div class="cp-blog__grid">
      {%- if section.settings.blog != blank -%}
        {%- for article in section.settings.blog.articles limit: 3 -%}
          <a href="{{ article.url }}" class="cp-blog__card">
            {%- if article.image != blank -%}
              <div class="cp-blog__card-image-wrap">
                {{
                  article.image
                  | image_url: width: 800
                  | image_tag:
                    class: 'cp-blog__card-img',
                    sizes: '(min-width: 750px) 33vw, 100vw',
                    widths: '300, 400, 600, 800',
                    loading: 'lazy',
                    alt: article.title
                }}
              </div>
            {%- endif -%}
            <div>
              {%- if article.tags.size > 0 -%}
                <p class="cp-blog__card-tag">{{ article.tags.first | capitalize }} &middot;</p>
              {%- endif -%}
              <p class="cp-blog__card-title">{{ article.title }}</p>
            </div>
          </a>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..3) -%}
          <div class="cp-blog__card">
            <div class="cp-blog__card-image-wrap"></div>
            <div>
              <p class="cp-blog__card-tag">News &middot;</p>
              <p class="cp-blog__card-title">Blog post title {{ i }}</p>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Blog Posts",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What's New?"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Blog Posts"
    }
  ]
}
{% endschema %}
