<style>
  .cp-spotlight {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    background: #0a0a0a;
  }

  .cp-spotlight__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 0;
    opacity: 0.85;
  }

  /* Dark overlay to ensure text is readable */
  .cp-spotlight::after {
    content: '';
    position: absolute;
    inset: 0;
    z-index: 1;
    background: rgba(0, 0, 0, 0.35);
  }

  .cp-spotlight__content {
    position: relative;
    z-index: 2;
    max-width: var(--page-width, 1200px);
    width: 100%;
    margin: 0 auto;
    padding: 6rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.25rem;
  }

  .cp-spotlight__eyebrow {
    font-size: 17px;
    font-weight: 600;
    letter-spacing: 2.04px;
    text-transform: capitalize;
    color: #BCBCBC;
    margin: 0;
  }

  .cp-spotlight__heading {
    font-size: 64px;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-weight: 700;
    line-height: 1.15;
    color: #ffffff;
    margin: 0;
    max-width: 640px;
  }

  .cp-spotlight__subheading {
    font-family: var(--font-body-family);
    font-size: 22px;
    font-weight: 400;
    line-height: 1.3;
    color: #ffffff;
    margin: 0;
    max-width: 520px;
  }

  .cp-spotlight__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    color: #ffffff;
    text-decoration: none;
    padding: 0 2.5rem;
    border-radius: 8px;
    font-family: var(--font-heading-family);
    font-size: 16px;
    font-weight: 600;
    letter-spacing: -0.36px;
    text-transform: capitalize;
    line-height: 17px;
    height: 46px;
    margin-top: 0.5rem;
    transition: background 0.2s ease;
  }

  .cp-spotlight__button:hover {
    background: #333333;
  }

  @media screen and (max-width: 749px) {
    .cp-spotlight {
      min-height: 100svh;
      align-items: flex-start;
    }

    .cp-spotlight__content {
      padding: 3.5rem 1.5rem;
      gap: 1rem;
    }

    .cp-spotlight__heading {
      font-size: 44px;
      font-weight: 600;
      letter-spacing: -0.9px;
      line-height: 1.25;
    }

    .cp-spotlight__subheading {
      font-size: 16px;
      font-weight: 600;
      line-height: 1.3;
    }

    .cp-spotlight__bg--desktop { display: none; }
  }

  @media screen and (min-width: 750px) {
    .cp-spotlight__bg--mobile { display: none; }
  }
</style>

<div class="cp-spotlight">

  {%- assign spotlight_alt = section.settings.heading | escape -%}
  {%- if section.settings.image_desktop != blank -%}
    {{
      section.settings.image_desktop
      | image_url: width: 3840
      | image_tag:
        class: 'cp-spotlight__bg cp-spotlight__bg--desktop',
        sizes: '100vw',
        widths: '750, 1100, 1500, 2000, 3000, 3840',
        loading: 'lazy',
        alt: spotlight_alt
    }}
  {%- endif -%}

  {%- assign mobile_img = section.settings.image_mobile | default: section.settings.image_desktop -%}
  {%- if mobile_img != blank -%}
    {{
      mobile_img
      | image_url: width: 1500
      | image_tag:
        class: 'cp-spotlight__bg cp-spotlight__bg--mobile',
        sizes: '100vw',
        widths: '375, 550, 750, 1100',
        loading: 'lazy',
        alt: spotlight_alt
    }}
  {%- endif -%}

  <div class="cp-spotlight__content">
    {%- if section.settings.eyebrow != blank -%}
      <p class="cp-spotlight__eyebrow">{{ section.settings.eyebrow | escape }}</p>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="cp-spotlight__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="cp-spotlight__subheading">{{ section.settings.subheading | escape }}</p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link | default: '#' }}" class="cp-spotlight__button">
        {{- section.settings.button_label | escape -}}
      </a>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Spotlight",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop background image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile background image",
      "info": "Optional. Falls back to desktop image if blank."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "info": "Small text above the heading.",
      "default": "New"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Cube Plus"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "The world's cleanest cool-and-warm-mist humidifier, with our patented air hydration technology."
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Cube Plus"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Product Spotlight"
    }
  ]
}
{% endschema %}
