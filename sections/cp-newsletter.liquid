<style>
  .cp-newsletter {
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 0;
  }

  .cp-newsletter__inner {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .cp-newsletter__heading {
    font-family: var(--font-heading-family);
    font-weight: 700;
    font-size: 25.5px;
    line-height: 1.5;
    margin: 0 0 20px;
    color: {{ section.settings.text_color }};
  }

  .cp-newsletter__text {
    font-family: var(--font-body-family);
    font-size: 18px;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 0 40px;
  }

  .cp-newsletter__form {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
  }

  .cp-newsletter__input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid #555;
    border-right: none;
    background: transparent;
    color: {{ section.settings.text_color }};
    font-family: var(--font-body-family);
    font-size: 16px;
    letter-spacing: 0.4px;
    outline: none;
  }

  .cp-newsletter__input::placeholder {
    color: rgba(255, 255, 255, 0.6);
    font-family: var(--font-body-family);
    letter-spacing: 0.4px;
  }

  .cp-newsletter__button {
    padding: 12px 24px;
    border: 1px solid #555;
    background: transparent;
    color: {{ section.settings.text_color }};
    font-family: var(--font-heading-family);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
  }

  .cp-newsletter__button:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
  }

  @media screen and (max-width: 749px) {
    .cp-newsletter {
      padding: 40px 0;
    }

    .cp-newsletter__heading {
      font-size: 21.675px;
    }

    .cp-newsletter__text {
      font-size: 16px;
      margin-bottom: 20px;
    }

    .cp-newsletter__form {
      margin: 0 20px;
      max-width: none;
    }
  }
</style>

<div class="cp-newsletter">
  <div class="cp-newsletter__inner">

    {%- if section.settings.heading != blank -%}
      <h2 class="cp-newsletter__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.subtext != blank -%}
      <p class="cp-newsletter__text">{{ section.settings.subtext | escape }}</p>
    {%- endif -%}

    {%- form 'customer', id: 'newsletter-form' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="cp-newsletter__form">
        <input
          type="email"
          name="contact[email]"
          class="cp-newsletter__input"
          placeholder="{{ section.settings.placeholder | escape }}"
          required
          autocomplete="email"
        >
        <button type="submit" class="cp-newsletter__button">
          {{ section.settings.button_label | escape }}
        </button>
      </div>
    {%- endform -%}

  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Let's Stay Connected"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Subscribe to get special offers, free giveaways, and exclusive deals."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#2b2b2b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
